import("//arkcompiler/ets_frontend/es2panda/es2abc_config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/ace_engine/build/ace_gen_obj.gni")
import("//foundation/appframework/ability/ability_runtime/ability_runtime.gni")

es2abc_gen_abc("gen_context_abc") {
  src_js = rebase_path("context.js")
  dst_file = rebase_path(target_out_dir + "/context.abc")
  in_puts = [ "context.js" ]
  out_puts = [ target_out_dir + "/context.abc" ]
  extra_args = [ "--module" ]
}

gen_obj("context_js") {
  input = "context.js"
  if (target_os == "ios") {
    output = target_out_dir + "/context.c"
  } else {
    output = target_out_dir + "/context.o"
  }
  snapshot_dep = []
}

gen_obj("context_abc") {
  input = get_label_info(":gen_context_abc", "target_out_dir") + "/context.abc"
  if (target_os == "ios") {
    output = target_out_dir + "/context_abc.c"
  } else {
    output = target_out_dir + "/context_abc.o"
  }
  snapshot_dep = [ ":gen_context_abc" ]
}

ohos_source_set("application_context_source_set") {
  sources = [ "context_module.cpp" ]

  deps = [
    ":gen_obj_src_context_abc",
    ":gen_obj_src_context_js",
  ]

  if (use_static_napi_libs) {
    deps += [ "//foundation/arkui/napi:ace_napi" ]
  } else {
    deps += ["//plugins/libs/napi:napi_${target_os}"]
  }

  subsystem_name = "ability"
  part_name = "ability_runtime"
}

ohos_shared_library("application_context") {
  deps = [ ":application_context_source_set" ]

  subsystem_name = "ability"
  part_name = "ability_runtime"
}
